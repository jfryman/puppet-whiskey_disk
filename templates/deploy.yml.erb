<%= name %>:
  domain:
<% domain.each do |d| -%>
  - name: '<%= d %>'
<% end -%>
  deploy_to: '<%= deploy_to %>'
  repository: '<%= repository %>'
  branch: '<%= branch %>'
  rake_env: 
<% rake_env.each do |k,v| -%>
    <%= k %>: '<%= v %>' 
<% end -%>
<% if config_repository != '' -%>
  config_repository: '<%= config_repository %>'
  config_branch: '<%= config_branch %>'
  config_target: '<%= config_target %>'
<% end -%>
<% if post_setup_script != '' -%>
  post_setup_script: '<%= post_setup_script %>'
<% end -%>
<% if post_deploy_script != '' -%>
  post_deploy_script: '<%= post_deploy_script %>'
<% end -%>
